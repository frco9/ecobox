<li>
	<%= link_to "#{user.firstname}" " #{user.name} |", user %>

	<% if user.admin? %>
		<%= " | ADMIN" %>
	<% end %>

	<% if current_user?(user) %>
		<%= " | moi" %>
	<% end %>

	<% if current_user.admin? && !current_user?(user) %>
		<%= link_to " | delete", user, method: :delete, data: { confirm: "Etes vous certain de vouloir supprimer l'utilisateur?" } %>
	<% end %>
</li>
