<%= form_for @sensor, :html => {:name => 'formulaireDynamique'} do |f| %>
  <% if @sensor.errors.any? %>
    <div id="error_explanation">
		<div class="alert alert-danger ">
	    	The form contains <%= pluralize(@sensor.errors.count, "error") %>.
	    </div>

      <ul>
      <% @sensor.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if !params[:extra] %>
    <div class="field">
      <%= f.label :name, "Nom" %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :frequency, "Fréquence" %>
      <%= f.text_field :frequency %>
    </div>

    <div class="field">
      <%= f.label :modulation_id, "Modulation" %>
      <%= collection_select(:sensor, :modulation_id, Modulation.find(:all), :id, :name) %>
    </div>
    <div class="field">
      <%= f.label :room_id, "Pièce" %>
      <%= collection_select(:sensor, :room_id, Room.find(:all), :id, :name) %>
    </div>

  <% else %>
    <div class="field">
      <%= f.hidden_field :name, value: "XUZDYGDBZGYDZDG112455" %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :sensor_id, "Type" %>
    <%= collection_select(:sensors_data_types, :data_type_id, DataType.find(:all), :id, :name) %>
  </div>  


  <div class="actions">
      <%= f.submit "Mettre a jour"%>
  </div>


<% end %>
